name: africa_weather_ml

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      mode: {type: string, default: "local"}
      compare: {type: bool, default: false}
    command: "python -m src.training.train --mode {mode} --compare {compare}"
  
  train:
    parameters:
      n_estimators: {type: int, default: 100}
      max_depth: {type: int, default: 5}
      learning_rate: {type: float, default: 0.1}
    command: "python -m src.training.train --n_estimators {n_estimators} --max_depth {max_depth} --learning_rate {learning_rate}"